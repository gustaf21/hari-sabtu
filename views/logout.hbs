    <div class="container">
        <div class="row">
            <div class="col-sm">

            </div>
            <div class="col-sm">
                <br/><br/>
                <form class="form-signin" action="/data" method="GET">
                    <div class="text-center mb-4">
                        <img class="mb-4"
                            src="https://res09.bignox.com/appcenter/id/2020/04/unnamed.png"
                            alt="" width="72" height="72">
