    <table class="table table-hover text-white" >
        <thead>
            <tr>
                <th>NO</th>
                <th>ID PEMAIN</th>
                <th>NICK PEMAIN</th>
                <th>NO.TELEPON</th>
                <th>ALAMAT</th>
                <th>NAMA GAME</th>
                <th>TANGGAL TRANSAKSI</th>
                <th>HAPUS DATA</th>
            </tr>
        </thead>
        <tbody class="table table-active text-white">
            {{#each data}}
            <tr>
                <td>{{ no }}</td>
                <td>{{ id_pemain }}</td>
                <td>{{ nick_pemain }}</td>
                <td>{{ no_telp }}</td>
                <td>{{ alamat }}</td>
                <td>{{ nama_game }}</td>
                <td>{{ tanggal_transaksi }}</td>
                  <td><a href="/hapus-nama_game/{{ nama_game }}"><button>HAPUS!</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>



