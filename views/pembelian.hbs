<h1 align="center">IDENTITAS DIRI</h1>    
 <form  action="/pembelian" method="POST">
    <input type="text" name="inputid_pemain" placeholder="ID PEMAIN">
   <input type="text" name="inputnick_pemain" placeholder="NICK PEMAIN">
   <input type="text" name="inputno_telp" placeholder="NO.TELEPON">
   <input type="text" name="inputalamat" placeholder="ALAMAT">
   <input type="text" name="inputnama_game" placeholder="NAMA GAME">
